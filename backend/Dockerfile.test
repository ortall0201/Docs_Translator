# Minimal test Dockerfile - fast startup
FROM python:3.13-slim

WORKDIR /app

# Install only essential dependencies for testing
RUN pip install --no-cache-dir fastapi uvicorn python-dotenv

# Create a simple test API
RUN echo 'from fastapi import FastAPI\napp = FastAPI()\n@app.get("/")\ndef read_root():\n    return {"message": "Backend is working!", "status": "healthy"}' > test_main.py

# Expose port
EXPOSE 8000

# Run simple test server
CMD ["uvicorn", "test_main:app", "--host", "0.0.0.0", "--port", "8000"]